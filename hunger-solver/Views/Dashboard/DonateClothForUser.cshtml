                @Html.ValidationMessageFor(model => model.latitude, "", new { @class = "text-danger" })
                <label for="user-latitude">Your Longitude</label>
                @Html.EditorFor(model => model.longitude, new { htmlAttributes = new { @id = "longitude" } })
                @Html.ValidationMessageFor(model => model.longitude, "", new { @class = "text-danger" })
            </div>
            <div class="radio-buttons">
                <label for="cloth-type">Cloth for: </label>
                <span>Male: </span> @Html.RadioButtonFor(model => model.ClothFor, "Male")
                <span>Female: </span> @Html.RadioButtonFor(model => model.ClothFor, "Female")

                <br />

                <label for="cloth-type">Cloth type (new or used): </label>
                <span>New:</span> @Html.RadioButtonFor(model => model.Type, "New")
                <span>Almost New:</span> @Html.RadioButtonFor(model => model.Type, "Almost New")
                <span>Used:</span> @Html.RadioButtonFor(model => model.Type, "Used")
            </div>
            <label>Cloth name</label>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "", placeholder = "Cloth Name(eg. t-shirt, pant, etc )" } })
