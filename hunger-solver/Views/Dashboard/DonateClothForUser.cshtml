@model hunger_solver.Models.ClothDonation
@{
    ViewBag.Title = "DonateClothForUser";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Donate Cloth</h2>
@using (Html.BeginForm("ClothDonation", "Donation", FormMethod.Post))
{
    <div class="cloth-donation-form-container">

        <h3>Please fill out this form</h3>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="sep"></div>
        <div class="inputs">
