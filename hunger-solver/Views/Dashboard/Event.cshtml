@model hunger_solver.Models.Event

@{
    ViewBag.Title = "CreateEvent";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.volunteer = Session["volunteer"];
}


<div class="row">

    <div class="col-md-6">
        <h2>CreateEvent</h2>

        @using (Html.BeginForm("CreateEvent", "Dashboard", FormMethod.Post))
        {


            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Place, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Place, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Place, "", new { @class = "text-danger" })
                    </div>
                </div>

                <br />
                <h4>Only for blood donation events</h4>

                <div class="form-group">
                    @Html.LabelFor(model => model.BloodGroup, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.BloodGroup, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BloodGroup, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BloodBagNeed, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.BloodBagNeed, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BloodBagNeed, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-6" style="background-color: #f6f6f6">
        <h2>Created Events</h2>
        <br />
        <div class="events-container">
            @foreach (var item in ViewBag.events)
            {
                if (item.VolunteerEmail == ViewBag.volunteer.Email)
                {
                    <div class="event-container">
                        <p>Event Name: @item.Name</p>
                        <p>Event Type: @item.Type</p>
                        <p>Event Place: @item.Place</p>
                        <p>Creator Name: @item.VolunteerName</p>
                        <p>Creator Email: @item.VolunteerEmail</p>
                        <p>Creator Mobile: @item.VolunteerPhone</p>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Completed" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="donation-separator"></div>
                }
            }
        </div>
    </div>
</div>

